<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleSonos" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="ruleSonos" scope="public">
    <example>Sarah allume la musique dans le salon</example>
    <tag>out.action=new Object(); </tag>
    <item>Sarah</item>
     
    <one-of>
		<!-- Lance la musique/radio -->
		<item weight="1.5">
			<one-of>
				<item>allume</item>
				<item>lance</item>
			</one-of> 
			<one-of>
				<item>la musique<tag>out.action.actionSonos="play"</tag></item>
				<item>la radio<tag>out.action.actionSonos="playradio"</tag></item>
				<item>la détection d'enceintes<tag>out.action.actionSonos="lookForSonos"</tag></item>
			</one-of>
		</item>
		
		<!-- Arrète la musique/radio -->
		<item weight="1.5">arrète la<tag>out.action.actionSonos="pause"</tag>
			<one-of>
				<item>musique</item>
				<item>radio</item>
			</one-of>
		</item>
		
		<!-- Changement de musique -->
		<item weight="1.5">passe à la musique
			<one-of>
				<item>suivante<tag>out.action.actionSonos="next"</tag></item>
				<item>precedente<tag>out.action.actionSonos="previous"</tag></item>
			</one-of>
		</item>
		
		<!-- Augmentation du volume par palier de 10 -->
		<item weight="1.5">monte<tag>out.action.actionSonos="volup"</tag>
			<one-of>
				<item>le volume</item>
				<item>le son</item>
			</one-of>
		</item>
		
		<!-- Baisse du volume par palier de 10 -->
		<item weight="1.5">baisse<tag>out.action.actionSonos="voldown"</tag>
			<one-of>
				<item>le volume</item>
				<item>le son</item>
			</one-of>
		</item>
		
		<!-- Réglage précise -->
		<item weight="1.5">règle le volume à
			<one-of>
				<item>dix<tag>out.action.actionSonos="volswitch";out.action.value="10"</tag></item>
				<item>vingt<tag>out.action.actionSonos="volswitch";out.action.value="20"</tag></item>
				<item>trente<tag>out.action.actionSonos="volswitch";out.action.value="30"</tag></item>
				<item>quarante<tag>out.action.actionSonos="volswitch";out.action.value="40"</tag></item>
				<item>cinquante<tag>out.action.actionSonos="volswitch";out.action.value="50"</tag></item>
				<item>soixante<tag>out.action.actionSonos="volswitch";out.action.value="60"</tag></item>
				<item>soixantedix<tag>out.action.actionSonos="volswitch";out.action.value="70"</tag></item>
				<item>quatrevingt<tag>out.action.actionSonos="volswitch";out.action.value="80"</tag></item>
				<item>quatrevingt dix<tag>out.action.actionSonos="volswitch";out.action.value="90"</tag></item>
				<item>cent<tag>out.action.actionSonos="volswitch";out.action.value="100"</tag></item>
			</one-of>
			<item>pour cent</item>
		</item>
		
		<!-- Synchro de la musique pour les pocesseurs de plusieurs Sonos -->
		<item>synchronise la musique<tag>out.action.actionSonos="synchronise"</tag>
			<one-of>
				<item>vers la salon<tag>out.action.syncFrom='Salon'</tag></item>
				<item>depuis la salon<tag>out.action.syncTo='Cuisine'</tag></item>
			</one-of>
		</item>
    </one-of>
		
	<!-- Choix de la pièce -->
	<item repeat="0-1">
		<one-of>
			<item>au</item>
			<item>à la</item>
			<item>dans le</item>
			<item>dans la</item>
		</one-of>
		<one-of>
			<item>salon<tag>out.action.idPiece='SARAH1';out.action.idSonos='a77905c9-1edb-6f98-7932-e90f9979f6d4'</tag></item>
			<item>cuisine<tag>out.action.idPiece='SARAH1';out.action.idSonos='49cf955f-0693-6c59-be8e-b4033f4406f5'</tag></item>
		</one-of>
	</item>
	
	<!--<one-of repeat="0-1">
		<item>sur play5<tag>out.action.idSonos='4b8a26fc-be8c-11ea-e4cb-02e9f914ed63'</tag></item>
    </one-of>-->
    
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/sonos";</tag>
  </rule>
</grammar>
              